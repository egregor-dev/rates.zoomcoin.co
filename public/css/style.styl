body
  padding 50px
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif

a
  color #00B7FF

.endpoint
  border-radius 4px
  border 1px solid #e2e2e2
  margin-bottom 24px
  overflow hidden
  width 33%

.route
  margin 0
  background #f9f9f9
  border-bottom 1px solid #e2e2e2
  font-weight bold
  overflow hidden

.verb
  float left
  padding 13px 16px
  color #fff
  background darkgray
  border-radius 2px 0 0 0

.path
  float left
  margin 10px
  font-size 18px
  font-family monospace

.param-desc
  margin 12px

.params
  .table
    margin-bottom 0
    border-collapse collapse
    border-spacing 0

.params .table td, .params .table th
  padding 6px 12px

.table>thead>tr>th, .table>tbody>tr>th, .table>tfoot>tr>th, .table>thead>tr>td, .table>tbody>tr>td, .table>tfoot>tr>td
  padding 8px
  line-height 1.9
  vertical-align top
  border-top 1px solid #ddd

.table
  width 100%
  margin-bottom 30px

table
  max-width 100%
  background-color transparent

span
  &.scope
    padding 4px 8px
    text-transform uppercase
    border-radius 4px
    font-size 12px
    margin 0 8px 0 0
    border 1px solid
